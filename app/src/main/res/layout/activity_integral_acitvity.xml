<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.hasee.pangci.activity.IntegralActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/integral_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        app:navigationIcon="@drawable/icon_back_white"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/integral_iv_user_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/normal_login"
            />

        <TextView
            android:id="@+id/integral_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/integral_iv_user_icon"
            android:text="当前积分:0"
            android:textColor="#ff613e"
            android:textSize="14dp"

            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5f5f5"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:gravity="left"
        android:text="积分兑换"
        android:textColor="#333333"/>

    <android.support.v7.widget.CardView
        android:id="@+id/member_center_v1_cv"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/yuekas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:text="100积分"
                android:textColor="#333333"
                android:textSize="14dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/yuekas"
                android:src="@drawable/recommend"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/yuekas"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="1个月会员"
                android:textColor="#999999"
                android:textSize="12dp"
                />

            <TextView
                android:id="@+id/integral_confirm_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text="兑换"
                android:background="@drawable/integral_tv_shape"
                android:textColor="@android:color/white"
                android:textSize="13dp"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        android:gravity="left"
        android:text="积分说明"
        android:textColor="#333333"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="1.首次注册赠送积分20"
        android:textColor="#999999"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="2.续费充值赠送积分20"
        android:textColor="#999999"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="3.邀请好友注册赠送积分20，邀请码为自己的账号,
   邀请成功后，注销重新登录即可获取积分"
        android:textColor="#999999"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="4.兑换成功后请重新登录应用获取实时会员信息"
        android:textColor="#999999"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="5.兑换成功并且重新登录后未得到会员权限,请第一时间
    在我的消息栏反馈给我们"
        android:textColor="#999999"
        android:textSize="14sp"
        />

</LinearLayout>
